<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="@dimen/scale_10dp"
              android:layout_marginLeft="@dimen/scale_16dp"
              android:layout_marginRight="@dimen/scale_15dp"
              android:background="@color/theme_grey_faint"
>
<TextView
        android:id="@+id/dashboard_holder_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/scale_10dp"
        android:text=""
/>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/scale_5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="@dimen/scale_10dp">
        <android.support.v7.widget.RecyclerView
        android:id="@+id/dashboard_holder_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>


</LinearLayout>
